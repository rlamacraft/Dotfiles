# Run flowjs and format output for passing into Vim's Quickfix: `vim -q <(. $dotfiles/flowall)`
npm run flow check 2>/dev/null | awk '
  BEGIN { details = -1 }
  $1 == "Error" { details = 3; printf("%s: ", $3) }
  details == 1 { printf("%s", $0) }
  details == 0 { printf("%s\n", $0) }
  {details--}'
